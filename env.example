# Frontend Firebase Configuration
# Copy this file to .env and replace with your actual Firebase project values
REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id

# Backend API URL (optional - defaults to http://localhost:8000)
REACT_APP_API_URL=http://localhost:8000

# Backend Firebase Configuration (for Firebase Storage)
# Storage mode: "firebase" to use Firebase Storage, "local" for local file storage
STORAGE_MODE=firebase

# Firebase Storage Bucket (same as REACT_APP_FIREBASE_STORAGE_BUCKET)
FIREBASE_STORAGE_BUCKET=your_project.appspot.com

# Path to Firebase Service Account JSON file (for backend)
# Download from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_CREDENTIALS=./firebase-service-account.json

# Alternative: Firebase Project ID (if using default credentials in cloud environments)
FIREBASE_PROJECT_ID=your_project_id 